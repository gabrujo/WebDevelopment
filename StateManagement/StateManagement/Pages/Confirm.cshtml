@page
@model StateManagement.Pages.ConfirmModel
@{
    ViewData["Title"] = "Confirm";
}
<h1>Confirm</h1>
<div>
    <h4>UserInfo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UInfo.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UInfo.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UInfo.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UInfo.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UInfo.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UInfo.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UInfo.StreetAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UInfo.StreetAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UInfo.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UInfo.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UInfo.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UInfo.State)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UInfo.Telephone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UInfo.Telephone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UInfo.CellPhone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UInfo.CellPhone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UInfo.UserPin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UInfo.UserPin)
        </dd>
    </dl>
</div>
<form asp-action="Confirm">
    <div class="form-group">
        <input type="hidden" asp-for="UInfo.Wizhidden" class="form-control" />
        <input type="submit" value="Prev" asp-page-handler="prevButton" name="prevButton"
               class="btn btn-primary" />
        <input type="submit" value="Finish" asp-page-handler="finishButton"
               name="finishButton" class="btn btn-primary" />
    </div>
</form>
